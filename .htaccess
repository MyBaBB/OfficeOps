###############################################
# MIME TYPES
###############################################
AddType application/javascript .js
AddType application/octet-stream .glb
AddType application/json .gltf

###############################################
# SPA ROUTING FOR VITE / REACT
###############################################
<IfModule mod_rewrite.c>
  RewriteEngine On

  # 1) Never rewrite asset requests (your chunks, images, etc.)
  RewriteCond %{REQUEST_URI} ^/assets/ [OR]
  RewriteCond %{REQUEST_URI} \.(js|css|png|jpe?g|gif|svg|ico|webp|glb|gltf)$
  RewriteRule ^ - [L]

  # 2) Don’t rewrite the actual index.html
  RewriteRule ^index\.html$ - [L]

  # 3) For everything else (real SPA routes) → index.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On

  # JS, CSS, chunks
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/css "access plus 1 year"

  # Images
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"

  # GLB / GLTF
  ExpiresByType model/gltf-binary "access plus 1 year"
  ExpiresByType model/gltf+json "access plus 1 year"

  # HTML should NOT be cached long-term
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>

<IfModule mod_headers.c>
  # JS, CSS, chunks
  <FilesMatch "\.(js|css)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # Images
  <FilesMatch "\.(png|jpg|jpeg|gif|webp|svg)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # GLB / GLTF
  <FilesMatch "\.(glb|gltf)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # HTML
  <FilesMatch "\.(html)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
  </FilesMatch>
</IfModule>
